{
  "compilerOptions": {
    "inlineSources": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
//      "@lib/database": [
//        "libs/database/src"
//      ],
//      "@lib/database/*": [
//        "libs/database/src/*"
//      ],
//      "@lib/gossip": [
//        "libs/gossip/src"
//      ],
//      "@lib/gossip/*": [
//        "libs/gossip/src/*"
//      ],
//      "@lib/shared": [
//        "libs/shared/src"
//      ],
//      "@lib/shared/*": [
//        "libs/shared/src/*"
//      ],
      "@tcp-transport": [
        "src/tcp-transport"
      ],
      "@tcp-transport/*": [
        "src/tcp-transport/*"
      ]
    }
  }
}
